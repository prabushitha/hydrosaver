<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" android:top="1dp" android:bottom="1dp"><layer-list>
                <item android:bottom="-10dp" android:left="-10dp" android:right="-10dp"><shape>
                        <gradient android:angle="270" android:endColor="#0141a8" android:startColor="#f2f3f4" />

                        <stroke android:width="8dp" android:color="#0141a8" />

                        <corners android:radius="5dp" />

                        <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                    </shape></item>
            </layer-list></item>
        <item android:state_enabled="true"><layer-list>
                <item android:bottom="-10dp" android:left="-10dp" android:right="-10dp"><shape android:shape="rectangle">
                        <gradient android:angle="270" android:endColor="#0141a8" android:startColor="#f2f3f4" />

                        <stroke android:width="8dp" android:color="#0141a8" />

                        <corners android:radius="5dp" />

                        <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                    </shape></item>
            </layer-list></item>

    </selector>